<div align='center'>
  <%= link_to "Create Event", new_event_path %> &nbsp;&nbsp;&nbsp;
  <%= link_to "Profile", profile_path %> &nbsp;&nbsp;&nbsp;
  <%= link_to "All Events", all_events_path %> &nbsp;&nbsp;&nbsp;
  <%= link_to "My Likes", show_like_path %> &nbsp;&nbsp;&nbsp;
  <%= link_to "Logout", logout_path %> &nbsp;&nbsp;&nbsp;

  <h1>List of Events</h1>
  <table border=1>
    <thead>
      <tr>  
        <th> Event Name </th>
        <th> Description </th>
        <th> Event date </th>   
        <th colspan=3> Actions </th>     
      </tr>
    </thead>

    <tbody>
      <% @events.each do |e| %>
        <tr>
          <td> <%= e.name %> </td>
          <td> <%= e.description %> </td>
          <td> <%= e.event_date %> </td>
          <td> <%= link_to "Edit", edit_event_path(e.id) %> </td>
          <td> <%= link_to "Delete",
                           event_path(e.id),
                           data: {
                             turbo_method: :delete,
                             turbo_confirm: "Are you sure?",
                           } %> </td> 
          <td> <%= link_to "Show Comment", event_path(e.id) %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
